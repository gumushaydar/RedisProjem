@model  RedisWebDeneme.Models.Channel
@{


    ViewBag.Title = "Channels";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



@using (Html.BeginForm("Channels", "Channel", FormMethod.Post))
{
    <input type="text" name="Key" class="form-control" placeholder="Key" /><br />
    <input type="text" name="Value" class="form-control" placeholder="Value" /><br />
    <input type="hidden" name="channelId" class="form-control" value="@Model.ChannelId" /><br />
    <input type="hidden" name="channelName" class="form-control" value="@Model.ChannelName" /><br />
    <input type="submit" class="btn-success" value="Create" />
}
<br />

<h1>@Model.ChannelName</h1>
<style>
    .fixed-button {
        position: relative;
    }
</style>

<br />
@if (Model.KeyValues != null && Model.KeyValues.Count > 0)
{
    foreach (var item in Model.KeyValues)
    {
        <div class="container">

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Key</th>
                        <th>Value</th>
                        <th>Update</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@item.Key</td>
                        <td>@item.Value</td>
                        <td>
                            @Html.ActionLink("Update", "Update", "Channel", new { updateId = item.KeyValueId }, new { @class = "btn btn-success fixed-button" })
                            
                            @Html.ActionLink("Delete", "Delete", "Channel", new { deleteId = item.KeyValueId }, new { @class = "btn btn-success fixed-button" })
                            
                           
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

